<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".ContactActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:background="@color/red"
        android:layout_height="?attr/actionBarSize">
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="0dp"
                android:id="@+id/iv_back1"
                android:padding="3dp"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_height="match_parent"
               android:text="Contact Us"
                android:textSize="20dp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:fontFamily="sans-serif"
                android:layout_height="wrap_content"
                android:text="Editor: "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:text="Amritpal Singh"
                android:textColor="@color/red"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:fontFamily="sans-serif"
                android:layout_height="wrap_content"
                android:text="Contact: "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
android:id="@+id/tv_phone"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:fontFamily="sans-serif"
                android:text="+917814613916"/>
        </LinearLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_marginTop="10dp"
    android:paddingTop="5dp"
    android:textStyle="bold"
    android:textSize="16dp"
    android:fontFamily="sans-serif"
    android:textColor="@android:color/white"
    android:background="@color/emailred"
    android:paddingBottom="5dp"
    android:text="Publish your Articles/Writeup FREE OF COST"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_height="wrap_content"
    />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:fontFamily="sans-serif"
                android:layout_height="wrap_content"
                android:text="Email: "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
android:id="@+id/tv_email"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:fontFamily="sans-serif"
                android:text="themarketeers1999@gmail.com"/>
        </LinearLayout>


    </LinearLayout>



</LinearLayout>